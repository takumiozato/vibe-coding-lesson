---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = "IRメディアサイト" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="企業のIR情報をわかりやすくお届けするメディアサイトです。" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <header class="bg-white shadow-sm">
      <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-gray-800">IRメディア</a>
        <nav>
          <ul class="flex space-x-6">
            <li><a href="/" class="text-gray-600 hover:text-gray-900">ホーム</a></li>
          </ul>
        </nav>
      </div>
    </header>
    
    <slot />
    
    <footer class="bg-white border-t mt-12 py-8">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <p class="text-gray-600">&copy; 2025 IRメディアサイト. All rights reserved.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>